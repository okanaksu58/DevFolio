﻿@model List<DevFolio.Models.TblService>

<section id="service" class="services-mf route">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="title-box text-center">
                    <h3 class="title-a">
                        Services
                    </h3>
                    <p class="subtitle-a">
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit.
                    </p>
                    <div class="line-mf"></div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-md-4">
                    <div class="service-box">
                        <div class="service-ico">
                            <span class="ico-circle"><i class="@x.ServiceImageUrl"></i></span>
                        </div>
                        <div class="service-content">
                            <h2 class="s-title">@x.ServiceTitle</h2>
                            <p class="s-description text-center">
                                @x.Description
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>